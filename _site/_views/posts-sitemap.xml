@<?xml version="1.0" encoding="UTF-8"@?>
@<?xml-stylesheet type="text/xsl" href="@base('sitemap.xsl')"@?>
<urlset xmlns='http://www.sitemaps.org/schemas/sitemap/0.9'>
  {% $posts = cockpit('collections')->find('posts', [ 'filter' => [ 'published' => true ], 'sort' => [ '_created' => -1 ] ]); %}
  @foreach($posts as $post)
    <url>
      <loc>{{ $app['site_url'] . $app['base_url'] . '/article/' . $post['slug'] }}</loc>
      <lastmod>{{ \date('c', ($post['_modified']) ?? $post['_created']) }}</lastmod>
			@if(!empty($post['_changefreq']))<changefreq>{{ $post['_changefreq'] }}</changefreq>@endif
			@if(!empty($post['_priority']))<priority>{{ $post['_priority'] }}</priority>@endif
    </url>
  @endforeach
</urlset>
